<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/primary_material_light">

    <View
        android:id="@+id/centerPole"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/centerLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nanodegree Apps"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button"
        android:textStyle="bold"
        android:background="@color/highlighted_text_material_dark"
        android:layout_above="@+id/button2"
        android:layout_toLeftOf="@+id/centerPole"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginBottom="@dimen/abc_button_inset_vertical_material"
        android:onClick="spotifyClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Super Duo Scores"
        android:id="@+id/button2"
        android:textStyle="bold"
        android:background="@color/highlighted_text_material_dark"
        android:layout_toLeftOf="@+id/centerPole"
        android:layout_below="@+id/centerLine"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginTop="@dimen/abc_button_inset_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_inset_vertical_material"
        android:onClick="superDuoScoresClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Super Duo Library"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:background="@color/highlighted_text_material_dark"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/centerPole"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginTop="@dimen/abc_button_inset_vertical_material"
        android:onClick="superDuoLibraryClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button4"
        android:textStyle="bold"
        android:background="@color/highlighted_text_material_dark"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/centerPole"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginBottom="@dimen/abc_button_inset_vertical_material"
        android:onClick="buildItBiggerClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button5"
        android:textStyle="bold"
        android:background="@color/highlighted_text_material_dark"
        android:layout_toRightOf="@+id/centerPole"
        android:layout_below="@+id/centerLine"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginTop="@dimen/abc_button_inset_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_inset_vertical_material"
        android:onClick="xyzReaderClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capstone: My Idea"
        android:id="@+id/button6"
        android:background="@color/accent_material_light"
        android:textStyle="bold"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/centerPole"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginTop="@dimen/abc_button_inset_vertical_material"
        android:layout_marginRight="@dimen/abc_button_inset_horizontal_material"
        android:onClick="capstoneClick" />

</RelativeLayout>
